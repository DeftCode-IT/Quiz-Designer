{
  "swagger": "2.0",
  "info": {
    "version": "0.0.1",
    "title": "Quiz Designer API",
    "description": "Documentation for Quiz Designer API.",
    "contact": {
      "name": "Quiz Designer Team"
    },
    "license": {
      "name": "MIT"
    }
  },
  "host": "http://localhost:3000",
  "basePath": "/api",
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "description": "Creates new user for quiz designer. Duplicates are not allowed.",
        "operationId": "addUser",
        "tags": [
          "Auth"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "email",
            "in": "body",
            "description": "Email of newly created user",
            "required": true,
            "schema": {
              "type": "string",
              "example": "example@example.com"
            }
          },
          {
            "name": "password",
            "in": "body",
            "description": "Password of newly created user",
            "required": true,
            "schema": {
              "type": "string",
              "example": "examplepassword"
            }
          }
        ],
        "responses": {
          "201": {
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "error": {
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "description": "Login user and get access token in return.",
        "operationId": "loginUser",
        "tags": [
          "Auth"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "email",
            "in": "body",
            "required": true,
            "schema": {
              "type": "string",
              "example": "example@example.com"
            }
          },
          {
            "name": "password",
            "in": "body",
            "required": true,
            "schema": {
              "type": "string",
              "example": "examplepassword"
            }
          }
        ],
        "responses": {
          "200": {
            "schema": {
              "type": "object",
              "properties": {
                "token": {
                  "type": "string",
                  "example": "dada3da88usdada8as.das8d8ada8das8da.jjaokdaokdasi"
                }
              }
            }
          },
          "error": {
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    },
    "/quizes/": {
      "get": {
        "description": "Get list of quizes created by user requesting them.",
        "operationId": "getQuizes",
        "tags": [
          "Quizes"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Number of results page",
            "required": true
          },
          {
            "name": "pageSize",
            "in": "query",
            "description": "Size of page for results (40 by default if not provided)"
          }
        ],
        "responses": {
          "200": {
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Quiz"
              }
            }
          },
          "error": {
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      },
      "post": {
        "description": "Add new quiz.",
        "operationId": "addQuiz",
        "tags": [
          "Quizes"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "title",
            "in": "body",
            "description": "Title of quiz",
            "required": true,
            "schema": {
              "type": "string",
              "example": "Some title example for quiz"
            }
          },
          {
            "name": "description",
            "in": "body",
            "description": "Description of quiz",
            "schema": {
              "type": "string",
              "example": "Example of some longer description for one of the quizes"
            }
          },
          {
            "name": "successMessage",
            "in": "body",
            "description": "Hooray! You have passed our quiz!",
            "required": true,
            "schema": {
              "type": "string",
              "example": "examplepassword"
            }
          },
          {
            "name": "failureMessage",
            "in": "body",
            "description": "Oh no! You have failed our quiz :(",
            "required": true,
            "schema": {
              "type": "string",
              "example": "examplepassword"
            }
          },
          {
            "name": "pointsToSuccess",
            "in": "body",
            "description": "Number of points needed to pass the quiz",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 24
            }
          },
          {
            "name": "status",
            "in": "body",
            "description": "Title of quiz",
            "required": true,
            "schema": {
              "type": "string",
              "example": "published"
            }
          },
          {
            "name": "version",
            "in": "body",
            "description": "Version of quiz",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 4
            }
          },
          {
            "name": "questions",
            "in": "body",
            "description": "Questions of quiz",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Question"
              }
            }
          }
        ],
        "responses": {
          "201": {
            "schema": {
              "type": "object",
              "required": [
                "title",
                "successMessage",
                "failureMessage",
                "pointsToSuccess",
                "status",
                "version",
                "createdBy"
              ],
              "properties": {
                "title": {
                  "type": "string",
                  "example": "Some title example for quiz"
                },
                "description": {
                  "type": "string",
                  "example": "Example of some longer description for some of the quizes"
                },
                "successMessage": {
                  "type": "string",
                  "example": "Hooray! You have passed our quiz!"
                },
                "failureMessage": {
                  "type": "string",
                  "example": "Oh no! You have failed our quiz :("
                },
                "pointsToSuccess": {
                  "type": "integer",
                  "example": 24
                },
                "url": {
                  "type": "string",
                  "example": "http://quizdesigner/quiz/x223xsdfsf3kh21"
                },
                "status": {
                  "type": "string",
                  "example": "published"
                },
                "version": {
                  "type": "integer",
                  "example": 4
                },
                "createdBy": {
                  "type": "string",
                  "example": "someuserid312331mdkdasda2giyzx"
                },
                "questions": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/Question"
                  }
                },
                "results": {
                  "type": "array",
                  "items": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "questionIndex": {
                          "type": "integer"
                        },
                        "answers": {
                          "type": "array",
                          "items": {
                            "type": "integer"
                          }
                        }
                      }
                    }
                  },
                  "example": []
                }
              }
            }
          },
          "error": {
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    },
    "/quizes/{quizID}": {
      "get": {
        "description": "Get single quiz by ID",
        "operationId": "getQuiz",
        "tags": [
          "Quizes"
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "schema": {
              "$ref": "#/definitions/Quiz"
            }
          },
          "error": {
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      },
      "patch": {
        "description": "Update single quiz.",
        "operationId": "updateQuiz",
        "tags": [
          "Quizes"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "title",
            "in": "body",
            "description": "Title of quiz",
            "schema": {
              "type": "string",
              "example": "Some title example for quiz"
            }
          },
          {
            "name": "description",
            "in": "body",
            "description": "Description of quiz",
            "schema": {
              "type": "string",
              "example": "Example of some longer description for one of the quizes"
            }
          },
          {
            "name": "successMessage",
            "in": "body",
            "description": "Hooray! You have passed our quiz!",
            "schema": {
              "type": "string",
              "example": "examplepassword"
            }
          },
          {
            "name": "failureMessage",
            "in": "body",
            "description": "Oh no! You have failed our quiz :(",
            "schema": {
              "type": "string",
              "example": "examplepassword"
            }
          },
          {
            "name": "pointsToSuccess",
            "in": "body",
            "description": "Number of points needed to pass the quiz",
            "schema": {
              "type": "integer",
              "example": 24
            }
          },
          {
            "name": "status",
            "in": "body",
            "description": "Title of quiz",
            "schema": {
              "type": "string",
              "example": "published"
            }
          },
          {
            "name": "version",
            "in": "body",
            "description": "Version of quiz",
            "schema": {
              "type": "integer",
              "example": 4
            }
          },
          {
            "name": "questions",
            "in": "body",
            "description": "Questions of quiz",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Question"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "schema": {
              "$ref": "#/definitions/Quiz"
            }
          },
          "error": {
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      },
      "delete": {
        "description": "Delete specific quiz.",
        "operationId": "deleteQuiz",
        "tags": [
          "Quizes"
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "schema": {
              "$ref": "#/definitions/Quiz"
            }
          },
          "error": {
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "required": [
        "email",
        "password"
      ],
      "properties": {
        "email": {
          "type": "string",
          "example": "example@example.com"
        },
        "password": {
          "type": "string",
          "example": "examplepassword"
        }
      }
    },
    "Quiz": {
      "type": "object",
      "required": [
        "title",
        "successMessage",
        "failureMessage",
        "pointsToSuccess",
        "status",
        "version",
        "createdBy"
      ],
      "properties": {
        "title": {
          "type": "string",
          "example": "Some title example for quiz"
        },
        "description": {
          "type": "string",
          "example": "Example of some longer description for some of the quizes"
        },
        "successMessage": {
          "type": "string",
          "example": "Hooray! You have passed our quiz!"
        },
        "failureMessage": {
          "type": "string",
          "example": "Oh no! You have failed our quiz :("
        },
        "pointsToSuccess": {
          "type": "integer",
          "example": 24
        },
        "url": {
          "type": "string",
          "example": "http://quizdesigner/quiz/x223xsdfsf3kh21"
        },
        "status": {
          "type": "string",
          "example": "published"
        },
        "version": {
          "type": "integer",
          "example": 4
        },
        "createdBy": {
          "type": "string",
          "example": "someuserid312331mdkdasda2giyzx"
        },
        "questions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Question"
          }
        },
        "results": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Result"
          }
        }
      }
    },
    "Question": {
      "type": "object",
      "required": [
        "type",
        "question",
        "answers",
        "correctAnswers"
      ],
      "properties": {
        "index": {
          "type": "integer",
          "example": 1
        },
        "type": {
          "type": "string",
          "example": "multiple"
        },
        "question": {
          "type": "string",
          "example": "How old is statue of liberty?"
        },
        "answers": {
          "type": "array",
          "items": {
            "type": "string",
            "example": [
              "Very old",
              "Pretty young",
              "Not that old"
            ]
          }
        },
        "correctAnswers": {
          "type": "array",
          "items": {
            "type": "integer",
            "example": [1, 3]
          }
        }
      }
    },
    "Result": {
      "type": "object",
      "required": [
        "user",
        "answers"
      ],
      "properties": {
        "user": {
          "type": "string",
          "example": "someuserid312331mdkdasda2giyzx"
        },
        "answers": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "questionIndex": {
                "type": "integer",
                "example": 1
              },
              "answers": {
                "type": "array",
                "items": {
                  "type": "integer",
                  "example": [1, 3]
                }
              }
            }
          }
        }
      }
    },
    "Error": {
      "type": "object",
      "required": [
        "name",
        "code",
        "message"
      ],
      "properties": {
        "name": {
          "type": "string",
          "example": "SOMETHING_NOT_FOUND"
        },
        "code": {
          "type": "integer",
          "example": 404
        },
        "message": {
          "type": "string",
          "example": "Something was not found."
        }
      }
    }
  }
}